{
    "manifest_version": 3,
    "name": "YouTube PiP",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "tabs"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ]
  }